#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "falkor"
require "pry"

def reload!
  puts "Reloading..."
  old_verbose = $VERBOSE
  $VERBOSE = nil

  files = $LOADED_FEATURES.select { |feat| feat =~ /\/falkor\// }
  files.each { |file| load file }

  $VERBOSE = old_verbose
  true
end

Pry.start
